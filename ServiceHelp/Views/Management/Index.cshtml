@model ServiceHelp.ViewModels.ManagementViewModels

@{
    ViewData["Title"] = "Zarządzanie użytkownikami";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>

<p>
    <a asp-action="AddEdit">Dodaj nowego użytkownika</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.GetEnumerator().Current.Email)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GetEnumerator().Current.Username)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.GetEnumerator().Current.Roles)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Username)
                </td>
                <td>
                    <ul>
                        @foreach (var role in item.Roles)
                        {
                            <li>@Html.DisplayFor(modelItem => role)</li>
                        }
                    </ul>
                </td>
                <td>
                    @Html.ActionLink("Edytuj", "AddEdit", new { id = item.Id }) @*|
                    @Html.ActionLink("Szczegóły", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Usuń", "Delete", new { id = item.Id })*@
                </td>
            </tr>
        }
    </tbody>
</table>
